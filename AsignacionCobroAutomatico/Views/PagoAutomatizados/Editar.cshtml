@model PagoAutomatizadoActualizadoViewModel
@{
    ViewData["Title"] = "Editar servicios";
}
<h1>Editar servicios</h1>

<div class="container mt-4">
    <div class="row">
        <div class="col-md-6">
            <form asp-action="Editar">
                <h3>Tarjeta de cliente</h3>
                <div class="mb-3">
                    <label asp-for="@Model.tarjeta.NumeroTarjeta" class="form-label">Número de tarjeta</label>
                    <input asp-for="@Model.tarjeta.NumeroTarjeta" class="form-control" id="numeroTarjeta" oninput="validarTarjeta()"/>
                </div>
                <div class="mb-3">
                    <label asp-for="@Model.Empresa" class="form-label">Empresa emisora</label>
                    <input asp-for="@Model.Empresa"class="form-control" id="empresaEmisora" readonly/>
                </div>
                <div class="mb-3">
                    <label asp-for="@Model.tarjeta.PinSeguridad" class="form-label">Pin de seguridad</label>
                    <input asp-for="@Model.tarjeta.PinSeguridad" class="form-control"/>
                </div>
                <div class="mb-3">
                    <label asp-for="@Model.tarjeta.FechaExpiracion" class="form-label">Fecha de vencimiento</label>
                    <input asp-for="@Model.tarjeta.FechaExpiracion" class="form-control"/>
                </div>
                <div class="mb-3">
                    <label asp-for="@Model.tarjeta.TipoTarjetaId" class="form-label">Tipo de tarjeta</label>
                    <select asp-for="@Model.tarjeta.TipoTarjetaId" asp-items="@Model.TipoTarjeta" class="form-select"></select>
                </div>
            </form>
        </div>
        <div class="col-md-6">
            <h3>Servicios del cliente</h3>
            @foreach (var servicio in Model.servicio)
            {
                <div class="mb-3">
                    <label >@servicio.Descripcion</label>
                    @if (servicio.asignado) 
                    {
                        <a asp-action="CambioEstatus" asp-route-id="@servicio.ServicioId" asp-route-accion="desasignar" asp-route-cliente="@Model.cliente.Id" class="btn btn-secondary">Desasignar</a>
                    }else
                    {
                        <a asp-action="CambioEstatus" asp-route-id="@servicio.ServicioId" asp-route-accion="asignar" asp-route-cliente="@Model.cliente.Id" class="btn btn-secondary">asignar</a>
                    }
                </div>
            }
        </div>
    </div>
</div>
@section scripts
{
    <script>
        function validarTarjeta()
        {
            var numTarjeta = document.getElementById("numeroTarjeta").value;
            var empEmisora = document.getElementById("empresaEmisora");

            var amexRex = /^3[47][0-9]{0,13}$/;
            var visaRex = /^4[0-9]{0,15}$/;
            var masterRex = /^5[15][0-9]{0,13}$/;
            var discoverRex = /^(6011|644|65)[0-9]{0,12}$/;

            if(amexRex.test(numTarjeta)){
                empEmisora.value = "AMEX";
            }else if(visaRex.test(numTarjeta)){
                empEmisora.value = "VISA";
            }else if(masterRex.test(numTarjeta)){
                empEmisora.value = "Master Card";
            }else if(discoverRex.test(numTarjeta)){
                empEmisora.value = "Discover";
            }else if(numTarjeta == ""){
                empEmisora.value = "";
            }else{
                empEmisora.value = "Tarjeta invalida";
            }
        }
    </script>
}